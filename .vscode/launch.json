    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Automation Debugger",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal",
            "runtimeArgs": ["run-script", "debuger"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "cucumberJS",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal",
            "runtimeArgs": ["run-script", "varsam-migration-parallel"], 
            "sourceMaps": true
        }
    ]
}